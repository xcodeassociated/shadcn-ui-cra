# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true
ij_typescript_spaces_within_imports = true
ij_javascript_spaces_within_imports = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0